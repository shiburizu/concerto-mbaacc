<LobbyScreen>:
    player_list: player_list
    challenge_list: challenge_list
    match_list: match_list
    lobby_code: lobby_code
    name: 'Lobby'
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        Image:
            source: cfg.find_img('lobby_bg.png')
        BoxLayout:
            orientation: 'vertical'
            GridLayout:
                rows: 1
                size_hint: (1, 0.1)
                MenuBtn:
                    size_hint_x: 0.348
                    padding_x: 25
                    text: lang.localize("TERM_LEAVE").upper()
                    on_release: 
                        root.exit()
                DummyBtn:
                    size_hint_x: 0.58
                    id: lobby_code
                    text: 'Lobby ID: 1234'
                    padding_x: 15
                    text_size: self.size
                    halign: 'right'
                    valign: 'middle'
                    background_color: (0,0,0,0)
                    on_release: root.invite_link()
            ScrollView:
                size_hint: (1,0.9)
                do_scroll_x: False
                do_scroll_y: True
                GridLayout:
                    height: self.minimum_height
                    size_hint_y: None
                    size_hint_x: 1
                    cols: 1
                    spacing: [0,2]
                    GridLayout:
                        id: challenge_list
                        cols: 1
                        height: self.minimum_height
                        size_hint_x: 1
                        size_hint_y: None
                        spacing: [0,2]
                    GridLayout:
                        id: player_list
                        cols: 1
                        height: self.minimum_height
                        size_hint_x: 1
                        size_hint_y: None
                        spacing: [0,2]
                    GridLayout:
                        id: match_list
                        cols: 1
                        height: self.minimum_height
                        size_hint_x: 1
                        size_hint_y: None
                        spacing: [0,2]    
    AnchorLayout
        id: lobbyAnchor
        anchor_x: 'center'
        anchor_y: 'top'
        LobbyBtn:
            text: lang.localize("LOBBY_MENU_MAINMENU")
            on_release: app.sm.current = 'Main'
                        
<LobbyList>:
    lobby_code: lobby_code
    lobby_type: lobby_type
    lobby_view: lobby_view
    name: 'LobbyList'
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        Image:
            source: cfg.find_img('lobby_bg.png')
        Image:
            source: 'res/lowergradient.png'
        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint_y: 0.1
                text: lang.localize("LOBBY_LIST_HEADER")
                font_name: 'res/texgyreheros-bolditalic.otf'
                outline_width: 1
            RecycleView:
                size_hint: (1,0.7)
                do_scroll_x: False
                do_scroll_y: True
                GridLayout:
                    size_hint: (1,0.7)
                    id: lobby_view
                    cols: 1
                    height: self.minimum_height
                    size_hint_y: None
                    spacing: [0,5]
            GridLayout:
                cols: 2
                size_hint_y: 0.2
                GridLayout:
                    rows: 2
                    padding: [20,5]
                    spacing: [0,5]
                    GridLayout:
                        size_hint_y: None
                        height: 32
                        cols: 3
                        Label:
                            text_size: self.size
                            outline_width: 1
                            text: '%s: ' % lang.localize('TERM_LOBBYCODE')
                            halign: 'right'
                            valign: 'middle'
                        TextInput:
                            id: lobby_code
                            multiline: False
                            foreground_color: (255, 255, 255, 1)
                            background_color: (255, 0, 0, 0.2)
                        Button:
                            text: lang.localize('TERM_JOIN')
                            outline_width: 1
                            background_color: '#343B88'
                            on_release: root.join()
                    GridLayout:
                        size_hint_y: None
                        height: 32
                        cols: 3
                        Label:
                            text_size: self.size
                            text: '%s: ' % lang.localize("TERM_TYPE")
                            halign: 'right'
                            valign: 'middle'
                            outline_width: 1
                        Spinner:
                            id: lobby_type
                            text: 'Private'
                            values: 'Private','Public'
                            outline_width: 1
                            background_color: '#343B88'
                        Button:
                            text: lang.localize('TERM_CREATE')
                            background_color: '#343B88'
                            outline_width: 1
                            on_release: root.create()
                GridLayout:
                    rows: 2
                    padding: [20,5]
                    spacing: [0,5]
                    Button:
                        text: lang.localize('TERM_REFRESH')
                        outline_width: 1
                        background_color: '#343B88'
                        size_hint_y: None
                        height: 32
                        halign: 'right'
                        padding_x: 10
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                        on_release: 
                            root.refresh()
                    Button:
                        text: lang.localize('TERM_BACK')
                        outline_width: 1
                        background_color: '#343B88'
                        size_hint_y: None
                        height: 32
                        halign: 'right'
                        padding_x: 10
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                        on_release: 
                            app.sm.current = 'Online'

