        anchor_y: 'bottom'
        Image:
            source: cfg.find_img('lobby_bg.png')
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                size_hint: (1, 0.1)
                MenuBtn:
                    text: lang.localize("TERM_BACK").upper()
                    size_hint_x: 0.8
