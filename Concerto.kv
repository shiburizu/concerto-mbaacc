<MenuBtn>
    text_size: self.size
    halign: 'left'
    valign: 'middle'
    size_hint_y: None
    height: 36
    padding_x: 50
    background_normal: 'res/menubtn.png'
    outline_width: 2
    on_press: self.background_color = (255, 0, 0, 1)
    on_release: self.background_color = (1, 1 ,1 ,1)
    
<PlayerRow>
    size_hint_y: None
    height: 32
    canvas.before:
        Color:
            rgba: (0,0,0,0.2)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows: 1
        Button:
            size_hint_x: 0.8
            id: PlayerBtn
            outline_width: 2
            font_name: 'res/texgyreheros-bolditalic.otf' 
            background_color: (0, 0, 0, 0)
            on_press: self.background_color = (255, 0, 0, 1)
            on_release: self.background_color = (0, 0, 0, 0)
            text_size: self.size
            halign: 'left'
            valign: 'center'
            padding_x: 50
        Button:
            size_hint_x: 0.2
            id: WatchBtn
            outline_width: 2
            font_name: 'res/texgyreheros-bolditalic.otf' 
            background_color: (0, 0, 0, 0)
            on_press: self.background_color = (255, 0, 0, 1)
            on_release: self.background_color = (0, 0, 0, 0)
            text_size: self.size
            halign: 'right'
            valign: 'center'
            padding_x: 10

<DummyBtn>
    text_size: self.size
    halign: 'center'
    valign: 'middle'
    size_hint_y: None
    height: 32
    padding_x: 50
    outline_width: 2
    font_name: 'res/texgyreheros-bolditalic.otf'
    background_normal: ''
    background_color: (0,0,0,0.3)

<LobbyBtn>:
    text: 'LOBBY'
    size_hint_x: 0.25
    size_hint_y: None
    height: 36
    outline_width: 2
    font_name: 'res/texgyreheros-bolditalic.otf'
    background_color: (255, 0, 0, 0.2)
    background_normal: ''
    on_release: 
        self.background_color = (255, 0, 0, 0.2)
    on_press: 
        self.background_color = (100, 0, 0, 0.9)  

<SpinnerOption>:
    text_size: self.size
    font_name: 'res/texgyreheros-bolditalic.otf'
    halign: 'center'
    valign: 'middle'
    background_color: '#210205'
    height: 30
    background_normal: ''

<Spinner>:
    text_size: self.size
    font_name: 'res/texgyreheros-bolditalic.otf'
    halign: 'center'
    valign: 'middle'
    background_color: '#343B88'

<MainScreen>:
    name: 'Main'
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        Image:
            source: cfg.find_img('main_bg.png')
        Image:
            source: 'res/gradient.png'
        Image:
            source: 'res/mainmenu.png'
        BoxLayout:
            orientation: 'vertical'
            GridLayout:
                size_hint: (0.6183, 1)
                cols: 1
                padding: (0,50)
                spacing: [0,10]
                MenuBtn:
                    text: '1. %s' % lang.localize("MAIN_MENU_OFFLINE")
                    on_release: app.sm.current = 'Offline'
                MenuBtn:
                    text: '2. %s' % lang.localize("MAIN_MENU_ONLINE")
                    on_release: app.sm.current = 'Online'
                MenuBtn:
                    text: '3. %s' % lang.localize("MAIN_MENU_RESOURCES")
                    on_release: app.sm.current = 'Resources'
                MenuBtn:
                    text: '4. %s' % lang.localize("MAIN_MENU_OPTIONS")
                    on_release: app.OptionScreen.load()
                MenuBtn:
                    text: '5. %s' % lang.localize("MAIN_MENU_ABOUT")
                    on_release: app.sm.current = 'About'
                MenuBtn:
                    text: '6. %s' % lang.localize("MAIN_MENU_UPDATE")
                    on_release: root.update()
        Image:
            source: cfg.find_img('main.png')
        Label:
            id: version
            size_hint: (0.97,0.1)
            text_size: self.size
            halign: 'left'
            valign: 'center'
            text: 'Version'
            font_name: 'res/texgyreheros-bolditalic.otf'
            font_size: 12
            outline_width: 2
        BoxLayout:
            size_hint: (0.2, 0.1)
            Label:
                text: cfg.img_credit('main.png','[ref=x]Bee Chan[/ref]')
                outline_width: 2
                markup: True
                font_name: 'res/texgyreheros-bolditalic.otf'
                font_size: 12
                on_ref_press: webbrowser.open('https://twitter.com/Bee_Sempai')
    AnchorLayout
        id: lobbyAnchor
        anchor_x: 'center'
        anchor_y: 'top'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        BoxLayout:
            padding: 0,40
            DummyBtn:
                id: welcome
                text: lang.localize("MAIN_MENU_WELCOME")

<AboutScreen>
